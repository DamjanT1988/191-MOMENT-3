@model List<_191_MOMENT_3.Models.LibraryModel>
@{
    ViewData["Title"] = "Library";
}

<h2>Existing CD library</h2>

@{
    Model.Reverse();

    if(Model.Count() > 0){
        @foreach (var item in Model)
        {
            <article>
                <h4>Artist: @item.Artist</h4>
                <h5>Album: @item.Album</h5>
                <p>Year: @item.Year - Minutes: @item.Minutes</p>

                <form method="post" asp-action="Delete">
                <input type="hidden" id="id" name="id" value="@item.Id">
                <input type="submit" value="Delete CD">
                </form>
            </article>
        }
    } else {
        <p>No CDs in library!</p>
    }
}

