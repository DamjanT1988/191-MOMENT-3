@model List<_191_MOMENT_3.Models.GuestbookModel>
@{
    ViewData["Title"] = "Guestbook";
}

<h2>Existing guestbook posts</h2>

@{
    Model.Reverse();

    if(Model.Count() > 0){
        @foreach (var item in Model)
        {
            <article>
                <h4>@item.Message</h4>
                <p>@item.Name - @item.PostedDate</p>

                <form method="post" asp-action="Delete">
                <input type="hidden" id="id" name="id" value="@item.Id">
                <input type="submit" value="Delete post">
                </form>
            </article>
        }
    } else {
        <p>No posts are written!</p>
    }
}

